{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GcFloatCharacteristic.schema.json",
    "title": "GcFloatCharacteristic",
    "definitions": {
        "GcFloatCharacteristic": {
            "$id": "#GcFloatCharacteristic",
            "description": "A characteristic which value is a float number",
            "required": [
                "value"
            ],
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "format": "float",
                    "description": "Value of the characteristic"
                }
            },
            "allOf": [
                {
                    "$ref": "GcCharacteristicValue.schema.json#GcCharacteristicValue"
                }
            ]
        }
    }
}