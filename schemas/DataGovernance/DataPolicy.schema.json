 {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "DataPolicy.schema.json",
    "title": "DataPolicy",
    "definitions": {
      "DataPolicy": {
        "$id": "#DataPolicy",
        "description": "The description of the data policy.",
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the Policy"
          },
          "description": {
            "type": "string",
            "description": "A narrative text describing the policy",
            "examples": [
              "CUST-101 Seven year Data Retention Policy",
              "GDPR-16 PII policy"
            ]
            },
            "policyType": {
            "type": "string",
            "description": "the type of data policy",
            "examples": [
              "Data Retention",
              "Privacy",
              "Security"
            ]
            },
            "lifeCycleStatus": {
            "type": "string",
            "description": "The status of the policy",
            "examples":[
            "Candidate",
            "Under Review",
            "Approved",
            "Obsolete"
            ]
            },
            "lastUpdateDate":{
            "type": "string",
            "description": "The date and time the policy asset was last updated",
            "examples": "2021-09-15"
            },
            "version":{
            "type": "string",
            "description": "The current version of the policy if applicable to the asset type",
            "examples": "1.0"
            },
          "relatedParty": {
          "type": "array",
          "description": "The parties who are involved or have an interest in this data policy",
          "items": {
            "$ref": "../EngagedParty/RelatedParty.schema.json#/definitions/RelatedParty"
          }
          }
        },
        "allOf": [
          {
            "$ref": "../Common/Entity.schema.json#Entity"
          }
        ]
      }
    }
  }