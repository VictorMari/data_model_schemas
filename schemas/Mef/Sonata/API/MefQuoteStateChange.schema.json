{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "MefQuoteStateChange.schema.json",
    "title": "MefQuoteStateChange",
    "definitions": {
      "MefQuoteStateChange": {
        "$id": "#MefQuoteStateChange",
        "description": "Holds the reached state, reasons and associated date the quote state changed, populated by the Seller.",
        "type": "object",
        "properties": {
          "state": {
            "$ref": "MefQuoteStateType.schema.json#MefQuoteStateType",
            "description": "Reached State"
          },
          "changeReason": {
            "type": "string",
            "readOnly" : true,
            "description": "Additional comment related to state change"
          },
          "changeDate": {
            "type": "string",
            "readOnly" : true,
            "format": "date-time",
            "description": "The date on when the state was reached"
          }
        }
      }
    }
  }