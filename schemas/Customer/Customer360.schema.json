{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "Customer.schema.json",
	"title": "Customer",
	"definitions": {
		"Customer360": {
			"$id": "#Customer",
			"type": "object",
			"properties": {
				"Customer": {
					"$ref": "../Customer/Customer.schema.json#Customer"
				},
				"UsageSpecification": {
					"type": "array",
					"items": {
						"$ref": "../Product/UsageSpecification.schema.json#UsageSpecification"
					}
				},
				"Quote": {
					"type": "array",
					"items": {
						"$ref": "../Customer/Quote.schema.json#Quote"
					}
				},
				"PartyInteraction": {
					"type": "array",
					"items": {
						"$ref": "../EngagedParty/PartyInteraction.schema.json#PartyInteraction"
					}
				},
				"AccumulatedBalance": {
					"type": "array",
					"items": {
						"$ref": "../Customer/AccumulatedBalance.schema.json#AccumulatedBalance"
					}
				},
				"Appointment": {
					"type": "array",
					"items": {
					"$ref": "../Customer/Appointment.schema.json#Appointment"
					}

				},
				"CustomerBill": {
					"type": "array",
					"items": {
						"$ref": "../Customer/CustomerBill.schema.json#CustomerBill"
					}
				},
				"BillFormat": {
					"$ref": "../Customer/BillFormat.schema.json#BillFormat"
				},
				"Product": {
					"type": "array",
					"items": {
						"$ref": "../Product/Product.schema.json#Product"
					},
					"minItems": 1
				},
				"Agreement": {
					"type": "array",
					"items": {
						"$ref": "../EngagedParty/Agrement.schema.json#Agreement"
					}, 
					"minItems":1
				},
				"Promotion": {
					"type": "array",
					"items": {
						"$ref": "../Product/Promotion.schema.json#Promotion"
					}
				},
				"LoyaltyBalance": {
					"type": "array",
					"items": {
						"$ref": "../Product/LoyaltyBalance.schema.json#LoyaltyBalance"
					}
				},
				"ServiceProblem": {
					"type": "array",
					"items": {
						"$ref": "../Service/ServiceProblem.schema.json#ServiceProblem"
					}
				}
			},
			"allOf": [
				{
					"$ref": "../Common/Entity.schema.json#Entity"
				}
			],
			"required":["BillFormat, Customer"]
		}
	}
}