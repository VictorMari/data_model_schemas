{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ExpectationSpecification.schema.json",
  "title": "ExpectationSpecification",
  "definitions": {
    "ExpectationSpecification": {
      "$id": "#ExpectationSpecification",
      "description": "ExpectationSpecification is a class that offers characteristics to describe a type of expectation.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of the specification"
        },
        "name": {
          "type": "string",
          "description": "Name given to the specification"
        },
        "validFor": {
          "$ref": "../Common/TimePeriod.schema.json#TimePeriod",
          "description": "The period for which this specification is valid"
        },
        "specCharacteristic": {
          "type": "array",
          "description": "List of characteristics that the expectation can take",
          "items": {
            "$ref": "../Common/CharacteristicSpecification.schema.json#/definitions/CharacteristicSpecification"
          }
        },
        "constraint": {
					"description": "This is a list of constraint references applied to this specification",
					"type": "array",
					"items": {
						"$ref": "../Common/ConstraintRef.schema.json#/definitions/ConstraintRef"
					}
				}
        
      },
      "allOf": [
        {
          "$ref": "../Common/Extensible.schema.json#/definitions/Extensible"
        }
      ]
    }
  }
}
