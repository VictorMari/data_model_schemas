{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ListAssetGroup.schema.json",
  "title": "ListAssetGroup",
  "definitions": {
    "ListAssetGroup": {
      "$id": "#ListAssetGroup",
      "description": "Defines a group of assets (entities) to which access can be controlled, using an explicit list of entity references",
      "type": "object",
      "properties": {
        "entity": {
            "type": "array",
            "items": {
                "$ref": "EntityRef.schema.json#/definitions/EntityRef"
            },
            "description": "List of entities to which entitlements might apply.",
            "examples": [
                "[{\"@type\":\"Product\",\"id\":\"pr00055551666\"}]"
            ]
        }
      },
      "allOf": [
        {
          "$ref": "../Common/AssetGroup.schema.json#AssetGroup"
        }
      ]
    }
  }
}
