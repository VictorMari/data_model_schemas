{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "TopologyQueryJob.schema.json",
  "title": "TopologyQueryJob",
  "definitions": {
    "TopologyQueryJob": {
      "$id": "#TopologyQueryJob",
      "description": "Represents a task used to query topology in the service",
      "type": "object",
      "properties": {
        "completionDate": {
          "type": "string",
          "format": "date-time",
          "description": "Date at which the job was completed"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time",
          "description": "Date at which the job was created"
        },
        "status": {
          "description": "Status of the topolology query job",
          "$ref": "TaskStateType.schema.json#TaskStateType"
        },
        "graphSource": {
          "description": "The topology graph to be queried",
          "$ref": "GraphRef.schema.json#GraphRef"
        },
        "query": {
          "description": "Implementation specific query language",
          "type": "string",
          "format": "binary"
        },        
        "graphTemplate": {
          "description": "Attributes of the created Graph",
          "allOf": [
            {
              "$ref": "Graph.schema.json#Graph"
            }
          ]
        },
        "graphResult": {
          "description": "The topology graph(s) created by the query",
          "type": "array",
          "items": {
            "$ref": "GraphRef.schema.json#GraphRef"
          }
        },
        "vertexResult": {
          "description": "The vertices result of the query",
          "type": "array",
          "items": {
            "$ref": "VertexRef.schema.json#VertexRef"
          }
        }
      },
      "allOf": [
        {
          "$ref": "Entity.schema.json#Entity"
        }
      ]
    }
  }
}
