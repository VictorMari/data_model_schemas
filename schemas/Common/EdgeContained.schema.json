{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "EdgeContained.schema.json",
    "title": "Edge (contained)",
    "definitions": {
        "EdgeContained": {
            "type": "object",
            "description": "Edge is a directed edge connecting vertices in a directed Graph.",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "unique identifier"
                },
                "vertex": {
                    "description": "Graph Vertices connected by this Edge.",
                    "type": "array",
                    "items": {
                        "$ref": "VertexContainedRef.schema.json#VertexContainedRef"
                    }
                }
            },
            "allOf": [
                {
                    "$ref": "EdgeBase.schema.json#EdgeBase"
                }
            ]
        }
    }
}
