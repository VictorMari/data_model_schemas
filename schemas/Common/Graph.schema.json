{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Graph.schema.json",
    "title": "Graph",
    "definitions": {
        "Graph": {
            "type": "object",
            "description": "Graph is a directed graph representing edges connecting vertices.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name given to this REST resource"
                },
                "description": {
                    "type": "string",
                    "description": "Description of this REST resource"
                },
                "graphRelationship": {
                    "type": "array",
                    "description": "Relationship to another Graph.",
                    "items": {
                        "$ref": "GraphRelationship.schema.json#GraphRelationship"
                    }
                },
                "contained": {
                    "type": "boolean",
                    "description": "True if this graph contains embedded edges & vertices, false for seperate edge/vertex collections."
                },
                "vertex": {
                    "type": "array",
                    "items": {
                        "$ref": "VertexContained.schema.json#VertexContained"
                    }
                },
                "edge": {
                    "type": "array",
                    "items": {
                        "$ref": "EdgeContained.schema.json#EdgeContained"
                    }
                }
            },
            "allOf": [
                {
                    "$ref": "Entity.schema.json#Entity"
                }
            ]
        }
    }
}
