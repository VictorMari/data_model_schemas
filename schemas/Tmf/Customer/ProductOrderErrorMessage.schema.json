{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ProductOrderErrorMessage.schema.json",
  "title": "ProductOrderErrorMessage",
  "definitions": {
    "ProductOrderErrorMessage": {
      "$id": "#ProductOrderErrorMessage",
      "description": "A ProductOrderErrorMessage represents an error that causes a status change in a product order.",
      "type": "object",
      "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Date when the error happened"
        },
        "productOrderItem": {
          "type": "array",
          "description": "A list of order item references corresponded to this error",
          "items": {
              "$ref": "../Product/ProductOrderItemRef.schema.json#/definitions/ProductOrderItemRef"
          }
        } 
      },
      "allOf": [
        {
          "$ref": "../../Core/ErrorMessage.schema.json#/definitions/ErrorMessage"
        },
        {
            "$ref": "../../Core/SchemaContext.schema.json#/definitions/SchemaContext"
        }
      ]
    }
  }
}